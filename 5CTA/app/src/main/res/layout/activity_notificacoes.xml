<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:clickable="true"
    android:id="@+id/contadorListItemNotificacoes"
    android:background="#fefcfcf8"
    android:layout_height="94dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewlistaNotificacoes"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="Notificações"
                android:id="@+id/item_TituloNotificacoes"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#070707"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false" />


            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="120dp"
                android:text="Subtitulo"
                android:id="@+id/item_SubtituloNotificacoes"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#070707"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false" />

            <ImageView
                android:id="@+id/imageViewNotificações"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo5cta" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>