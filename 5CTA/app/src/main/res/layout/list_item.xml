<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:clickable="true"
    android:id="@+id/contadorListItem"
    android:background="#fefcfcf8"
    android:layout_height="94dp"
    android:layout_width="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewlista"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff">


    <!--<ImageView-->
        <!--android:id="@+id/item_Icone"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@drawable/oval"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@+id/item_Titulo"-->
        <!--android:layout_toStartOf="@+id/item_Titulo" />-->


    <TextView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:paddingLeft="5dp"
        android:text="Seção"

        android:id="@+id/item_Titulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#070707"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/item_Subtitulo"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:text="Descrição"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="#040404" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="Ligar"
        android:id="@+id/btn_acao"
        android:background="@color/accent_material_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_telefone"
        android:layout_toLeftOf="@+id/btn_acao"
        android:layout_toStartOf="@+id/btn_acao"
        android:layout_alignBottom="@+id/item_Titulo"
        android:visibility="invisible"
        android:textColor="#080707" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:layout_centerVertical="true"
                android:src="@drawable/logo5cta"
                android:layout_marginLeft="5dp"
                android:layout_margin="2dp"
                android:layout_alignParentEnd="false" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>