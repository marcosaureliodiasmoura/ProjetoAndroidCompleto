<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    orientation="vertical" android:layout_height="400dp"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="4dp"
    android:id="@+id/cardviewNoticias"
    android:elevation="4dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Data"
            android:id="@+id/txt_descr2_noticias"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


        <ImageView
            android:src="@drawable/logo5cta"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/thumbnaill_noticias"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="4dp"
            android:cropToPadding="false"
            android:paddingLeft="5dp"
            android:scaleType="centerCrop"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />
        <!--android:layout_below="@+id/txt_data_noticias"-->

        <TextView
            android:id="@+id/txt_titulo_noticias"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titulo"
            android:gravity="center"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/thumbnaill_noticias"
            android:background="#80000000"

             />



        <TextView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descrição"
            android:id="@+id/txt_descr_noticias"
            android:layout_below="@id/txt_titulo_noticias"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#0b0a0a" />


    </RelativeLayout>



</android.support.v7.widget.CardView>







